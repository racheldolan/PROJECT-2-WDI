<section class="user-show">
<div class="columns">
      <div class="column is-half-desktop">
        <div class="card">
          <div class="card-image">
            <figure class="image">
            <img src="<%= values[0].profile %>" alt="Placeholder image"></a>
            </figure>
          </div>
        </div>
      </div>

      <div class="column is-half-desktop">
        <div class="card">
          <div class="card-content">
                <ul>
                  <li><%= values[0].username %> </li>
                  <li><%= values[0].location %> </li>
                  <li>Followers: <%= values[0].followers.length %> </li>
                  <li>Following: <%= values[0].following.length %> </li>
                  <li><%= values[0].website %> </li>
                  <li><%= values[0].bio %> </li>
                  <li> <button class="button follow" name="button"> Follow</button></li>
                  <li><button class="button follow" name="button"><a href="/users/<%= values[0].id %>/edit">Edit</a></button></li>

                </ul>
              </div>
        </div>
      </div>
  </div>
</div>
</section>


<section class="index-page">
<div class="columns is-multiline">
  <% wantedPictures.forEach( (photo) =>{ %>
      <div class="column is-one-third-desktop is-half-tablet">
        <div class="card">
          <div class="card-image">
            <figure class="image is-square">
            <img src="<%= photo.url %>" alt="Placeholder image">
            </figure>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
