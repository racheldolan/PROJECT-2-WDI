<h1>user profile</h1>


<section class="show-page">
  <div class="columns show">
    <div class="column is-half">
      <img src="<%= user.picture %>" alt="<%= user.username %>">
      </div>
      <div class="column is-half">
        <ul>
          <li><%= user.username %> </li>
          <li><%= user.location %> </li>
          <li><%= user.website %> </li>
          <li><%= user.bio %> </li>
        </ul>
        <a href="/users/<%= user.id %>/edit">Edit</a>
      </div>
    </div>
  </section>
