<form action="/pictures/<%= picture.id %>" method="POST">
<input type="hidden" name="_method" value="PUT">
    <div class="field">
        <label for="title">Title</label>
          <div class="control">
            <input type="text" name="title" class="input" id="title" value="<%= picture.title %>">
          </div>
    </div>
    <div class="field">
        <label for="url">Url</label>
          <div class="control">
            <input type="url" name="url" class="input" id="url" value="<%= picture.url %>">
        </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      <div class="control">
        <button class="button is-text">Cancel</button>
      </div>
    </div>
  </div>
</form>
