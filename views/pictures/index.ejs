

<section class="index-page">
<div class="columns is-multiline">
  <% pictures.forEach( (picture) =>{ %>
      <div class="column is-one-third-desktop is-half-tablet">
        <div class="card">
          <div class="card-image">
            <figure class="image is-square">
              <a href='/pictures/<%= picture.id %>'><img src="<%= picture.url %>" alt="Placeholder image"></a>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <% if (picture.creator){ %>
                  <img src=" <%= picture.creator.profile %>" alt="">
                      <% } %>
                </figure>
              </div>
              <div class="media-content">
                <% if (picture.creator){ %>
                  <p class="title"><a class="creator" href="/users/<%= picture.creator.id %>"> <%= picture.creator.username %> </a></p>
                  <p class="subtitle is-6"> <%= picture.creator.location %> </p>
                  <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</section>
