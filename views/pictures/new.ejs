

<form action="/pictures" method="post" class="form-section">
    <div class="field">
        <label for="title">Title</label>
          <div class="control">
            <input type="text" name="title" class="input" id="title">
          </div>
    </div>
    <div class="field">
        <label for="url">Url</label>
          <div class="control">
            <input type="url" name="url" class="input" id="url">
        </div>
    </div>
    <div class="field is-grouped is-grouped-centered">
      <p class="control">
        <a class="button is-primary">
          Submit
        </a>
      </p>
      <p class="control">
        <a class="button is-light">
          Cancel
        </a>
      </p>
    </div>
</form>
